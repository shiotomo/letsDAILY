<!DOCTYPE html>
<html>
  <head>
    <title>LetsDaily</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <div class="nav-content">
          <% if user_signed_in? %>
            <%= link_to 'LetsDaily', dashboards_path, class: "brand-logo" %>
            <div class="right">
              <a href="#" data-activates="mobile-demo" class="button-collapse"><%= mi.menu %></a>
            </div>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><%= link_to 'Memo List', memos_path %></li>
              <li><%= link_to 'Task List', tasks_path %></li>
              <li><%= link_to 'Sign Out', signout_path %></li>
            </ul>
            <ul class="side-nav" id="mobile-demo">
              <li><%= link_to 'Memo List', memos_path %></li>
              <li><%= link_to 'Task List', tasks_path %></li>
              <li><%= link_to 'Sign Out', signout_path %></li>
            </ul>
          <% else %>
            <%= link_to 'LetsDaily', root_path, class: "brand-logo" %>
          <% end %>
        </div>
      </nav>
    </header>


    <div class="row">
      <div class="col s1"></div>
      <div class="col s10">
        <%= yield %>
      </div>
      <div class="col s1"></div>
    </div>

    <script>
      (function ($) {
        $(function () {
          $('.button-collapse').sideNav();
        });
      })(jQuery);
    </script>
  </body>
</html>
