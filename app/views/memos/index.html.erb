<h1>Memo List</h1>
<%= link_to 'Create memo', new_memo_path, class: "btn blue" %>

<% if @memos.empty? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">
        No Contents
      </span>
    </div>
  </div>
<% else %>
  <% @memos.each do |memo| %>
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          <a class="modal-trigger" href="#content"><%= memo.title %></a>
        </span>
      </div>
      <div class="card-action">
        <%= link_to "UPDATE", edit_memo_path(memo) %>
        <%= link_to "DELETE", 
          memo_path(memo),
          method: :delete,
          data: {confirm: "Are you sure?"}
        %>
      </div>

      <div id="content" class="modal">
        <div class="model-content">
          <div class="row">
            <div class="col s1"></div>
            <div class="col s10">
              <h3><%= memo.title %></h3>
              <p>
                <%= simple_format memo.body %>
              </p>
            </div>
            <div class="col s1"></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<script>
  $(document).on('ready page:load', () => {
    $('.modal').modal();
  });
</script>
