<h1>Memo List</h1>
<%= link_to 'Create memo', new_memo_path, class: "btn blue" %>

<% if @memos.empty? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">
        No Contents
      </span>
    </div>
  </div>
<% else %>
  <% @memos.each do |memo| %>
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          <%= link_to memo.title, memo_path(memo) %>
        </span>
      </div>
    </div>
  <% end %>
<% end %>
