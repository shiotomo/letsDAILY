<%= form_for @task do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body, class: "materialize-textarea" %>

  <%= f.label :importance %>
  <%= f.text_field :importance %>

  <%= f.submit %>
<% end %>
