<h1>Task List</h1>
<%= link_to 'Create task', new_task_path, class: "btn blue" %>

<% if @tasks.empty? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">
        No Contents
      </span>
    </div>
  </div>
<% else %>
  <% @tasks.each do |task| %>
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          <%= link_to task.title, task_path(task) %>
        </span>
      </div>
    </div>
  <% end %>
<% end %>
